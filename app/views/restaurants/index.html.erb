<div class="container">
  <h1>All restaurants</h1>
  <%= link_to("Create a restaurant", new_restaurant_path, class: 'btn btn-primary mb-3') %>

  <div class="d-flex gap-3">
    <% @restaurants.each do |restaurant| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.category %></p>
          <%= link_to("Show more", restaurant_path(restaurant), class: 'btn btn-outline-dark btn-sm') %>
          <%= link_to("Delete", restaurant_path(restaurant), class: 'btn btn-danger btn-sm', data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete this resto ?"}) %>
        </div>
      </div>
    <% end %>
  </div>

</div>
